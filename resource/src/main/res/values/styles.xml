<resources>
	
	<!-- Base application theme. -->
	<style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>
	
	<style name="ViewDividerVertical">
		<item name="android:layout_width">@dimen/dimenThemeDivider</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:background">@color/colorThemeDivider</item>
	</style>
	
	<style name="ViewDividerHorizontal">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/dimenThemeDivider</item>
		<item name="android:background">@color/colorThemeDivider</item>
	</style>
	
	<style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
		<item name="tabBackground">@color/colorWhite</item>
		<item name="tabIndicatorColor">#609053</item>
		<item name="tabIndicatorHeight">2dp</item>
		<item name="tabIndicatorFullWidth">false</item>
		<item name="tabSelectedTextColor">@color/colorTextAccent</item>
		<item name="android:textColor">@color/colorTextPrimary</item>
		<item name="android:textSize">15sp</item>
	</style>
</resources>

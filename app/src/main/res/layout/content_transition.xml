<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="8dp"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:context=".skill.TransitionActivity"
	tools:showIn="@layout/activity_transition">
	
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="1dp"
		android:text="1,android 5.0之前"/>
	
	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="oldClick"
		android:text="old"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>
	
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:text="2, 分解、滑动进入、淡入淡出"/>
	
	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="explodeClick"
		android:text="explode"/>
	
	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="slideClick"
		android:text="slide"/>
	
	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="fadeClick"
		android:text="fade"/>
	
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:text="3, 共享元素"/>
	
	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="transitionClick"
		android:text="transition"
		android:transitionName="myimage"
		tools:ignore="UnusedAttribute"/>
	
	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="4dp"
		android:onClick="transitionClick"
		android:src="@mipmap/ic_test_0"/>
</LinearLayout>